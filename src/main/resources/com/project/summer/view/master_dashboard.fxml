<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.summer.view.MasterDashboardController">
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="50.0" spacing="10.0" style="-fx-background-color: #f0f0f0; -fx-border-color: #cccccc; -fx-border-width: 0 0 1 0;">
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
            <Label fx:id="storeCodeLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <HBox HBox.hgrow="ALWAYS" />
            <Button onAction="#showStoreManagement" prefHeight="35.0" prefWidth="100.0" text="매장관리" />
            <Button onAction="#showStockManagement" prefHeight="35.0" prefWidth="100.0" text="재고관리" />
            <Button onAction="#showRequestManagement" prefHeight="35.0" prefWidth="100.0" text="요청관리" />
            <Button onAction="#showProductManagement" prefHeight="35.0" prefWidth="100.0" text="물품관리" />
         <Button onAction="#logout" mnemonicParsing="false" prefHeight="35.0" prefWidth="100.0" text="로그아웃" />
        </HBox>
    </top>
    <center>
        <VBox fx:id="contentArea" />
    </center>
</BorderPane>
