<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="718.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.summer.view.RequestManagementController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <HBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
        <children>
            <VBox prefHeight="638.0" prefWidth="451.0" spacing="10.0" style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-padding: 10;" HBox.hgrow="NEVER">
                <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="요청 리스트" />
                <TableView fx:id="requestTableView" prefHeight="588.0" prefWidth="440.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="idColumn" prefWidth="83.0" text="번호" />
                        <TableColumn fx:id="storeNameColumn" prefWidth="171.0" text="가게이름" />
                        <TableColumn fx:id="statusColumn" prefWidth="174.0" text="승인여부" />
                    </columns>
                </TableView>
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <VBox prefHeight="638.0" prefWidth="467.0" spacing="10.0" style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-padding: 10;" HBox.hgrow="NEVER">
                <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="요청 정보" />
                <GridPane alignment="CENTER" hgap="10.0" maxWidth="-Infinity" prefHeight="258.0" prefWidth="445.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
