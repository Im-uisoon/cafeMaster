                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="매장명" GridPane.rowIndex="0" />
                        <TextField fx:id="storeNameField" editable="false" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="35.0" prefWidth="270.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        <Label text="요청날짜" GridPane.rowIndex="1" />
                        <TextField fx:id="requestedDateField" editable="false" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="35.0" prefWidth="270.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="상품명" GridPane.rowIndex="2" />
                        <TextField fx:id="productNameField" editable="false" maxWidth="-Infinity" prefHeight="35.0" prefWidth="270.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label text="개수" GridPane.rowIndex="3" />
                        <TextField fx:id="quantityField" editable="false" maxWidth="-Infinity" prefHeight="35.0" prefWidth="270.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <Label text="승인상태" GridPane.rowIndex="4" />
                        <TextField fx:id="statusField" editable="false" maxWidth="-Infinity" prefHeight="35.0" prefWidth="270.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                        <Label text="거절사유" GridPane.rowIndex="5" />
                        <ComboBox fx:id="rejectionReasonComboBox" prefHeight="35.0" prefWidth="270.0" promptText="거절 사유 선택" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                        <TextArea fx:id="customRejectionReasonArea" managed="false" prefHeight="70.0" prefWidth="270.0" promptText="기타 사유 입력" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                    </children>
                </GridPane>
                <HBox alignment="CENTER_RIGHT" prefHeight="46.0" prefWidth="400.0" spacing="10.0">
                    <Button contentDisplay="CENTER" onAction="#showPendingRequests" prefHeight="32.0" prefWidth="52.0" text="대기" />
                    <Button contentDisplay="CENTER" onAction="#approveRequest" prefHeight="32.0" prefWidth="52.0" text="승인" />
                    <Button contentDisplay="CENTER" onAction="#rejectRequest" prefHeight="32.0" prefWidth="52.0" text="거절" />
               <padding>
                  <Insets right="45.0" />
               </padding>
                </HBox>
            </VBox>
        </children>
    </HBox>
</AnchorPane>
