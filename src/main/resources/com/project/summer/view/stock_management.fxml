<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="718.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.summer.view.StockManagementController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <HBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
        <children>
            <VBox prefHeight="638.0" prefWidth="451.0" spacing="10.0" style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-padding: 10;" HBox.hgrow="NEVER">
                <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="재고 리스트" />
                <TableView fx:id="stockTableView" prefHeight="300.0" prefWidth="429.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="idColumn" prefWidth="43.0" text="번호" />
                        <TableColumn fx:id="productCodeColumn" prefWidth="64.0" text="상품코드" />
                        <TableColumn fx:id="productNameColumn" prefWidth="101.0" text="상품명" />
                        <TableColumn fx:id="expirationDateColumn" minWidth="0.0" prefWidth="146.0" text="유통기한" />
                        <TableColumn fx:id="quantityColumn" prefWidth="74.0" text="개수" />
                    </columns>
                </TableView>
                <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="보충 권장 리스트" />
                <ListView fx:id="recommendationListView" prefHeight="288.0" prefWidth="429.0" VBox.vgrow="ALWAYS" />
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <VBox prefHeight="638.0" prefWidth="467.0" spacing="10.0" style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-padding: 10;" HBox.hgrow="NEVER">
                <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="608.0" prefWidth="429.0" VBox.vgrow="ALWAYS">
                    <items>
                        <VBox prefHeight="290.0" prefWidth="429.0" spacing="10.0">
                            <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="재고 정보" />
                            <GridPane alignment="CENTER" hgap="10.0" maxWidth="-Infinity" prefHeight="215.0" prefWidth="493.0" vgap="10.0">
                                <columnConstraints>
                                    <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
                                </columnConstraints>
                                <rowConstraints>
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                </rowConstraints>
                                <children>
                                    <Label text="상품 코드">
                                        <font>
                                            <Font size="14.0" />
                                        </font>
                                    </Label>
                                    <TextField fx:id="productCodeField" maxWidth="-Infinity" prefHeight="35.0" prefWidth="270.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                    <Label text="상품명" GridPane.rowIndex="1">
                                        <font>
                                            <Font size="14.0" />
                                        </font>
                                    </Label>
                                    <TextField fx:id="productNameField" maxWidth="-Infinity" prefHeight="35.0" prefWidth="270.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                    <Label text="유통기한" GridPane.rowIndex="2">
                                        <font>
                                            <Font size="14.0" />
                                        </font>
                                    </Label>
                                    <DatePicker fx:id="expirationDateField" maxWidth="-Infinity" prefHeight="35.0" prefWidth="270.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                    <Label text="개수" GridPane.rowIndex="3">
                                        <font>
                                            <Font size="14.0" />
                                        </font>
                                    </Label>
                                    <TextField fx:id="quantityField" maxWidth="-Infinity" prefHeight="35.0" prefWidth="270.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                </children>
                            </GridPane>
                            <HBox alignment="CENTER_RIGHT" prefHeight="46.0" prefWidth="400.0" spacing="10.0">
                                <Button contentDisplay="CENTER" onAction="#resetForm" prefHeight="32.0" prefWidth="52.0" text="리셋" />
                                <Button contentDisplay="CENTER" onAction="#addStock" prefHeight="32.0" prefWidth="52.0" text="추가" />
                                <Button contentDisplay="CENTER" onAction="#updateStock" prefHeight="32.0" prefWidth="52.0" text="수정" />
                                <Button contentDisplay="CENTER" onAction="#deleteStock" prefHeight="32.0" prefWidth="52.0" text="삭제" />
                                <padding>
                                    <Insets right="45.0" />
                                </padding>
                            </HBox>
                        </VBox>
                        <VBox prefHeight="290.0" prefWidth="429.0" spacing="10.0">
                            <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="물품 리스트" />
                            <TableView fx:id="productListTableView" prefHeight="270.0" prefWidth="429.0" VBox.vgrow="ALWAYS">
                                <columns>
                                    <TableColumn fx:id="productIdColumnForProductList" prefWidth="58.0" text="번호" />
                                    <TableColumn fx:id="productCodeColumnForProductList" prefWidth="85.0" text="물품코드" />
                                    <TableColumn fx:id="productNameColumnForProductList" prefWidth="185.0" text="물품명" />
                                    <TableColumn fx:id="priceColumnForProductList" prefWidth="100.0" text="가격" />
                                </columns>
                            </TableView>
                        </VBox>
                    </items>
                </SplitPane>
            </VBox>
        </children>
    </HBox>
</AnchorPane>
