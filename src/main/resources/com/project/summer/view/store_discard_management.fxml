<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="718.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.summer.view.StoreDiscardManagementController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <HBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
        <children>
            <!-- 왼쪽: 폐기 리스트 -->
            <VBox prefHeight="638.0" prefWidth="451.0" spacing="10.0" style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-padding: 10;" HBox.hgrow="NEVER">
                <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="폐기 리스트" />
                <TableView fx:id="discardTableView" prefHeight="588.0" prefWidth="440.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="idColumn" prefWidth="43.0" text="번호" />
                        <TableColumn fx:id="productCodeColumn" prefWidth="64.0" text="상품코드" />
                        <TableColumn fx:id="productNameColumn" prefWidth="61.0" text="상품명" />
                        <TableColumn fx:id="quantityColumn" prefWidth="59.0" text="개수" />
                        <TableColumn fx:id="discardReasonColumn" prefWidth="70.0" text="폐기사유" />
                        <TableColumn fx:id="discardDateColumn" prefWidth="131.0" text="폐기일자" />
                    </columns>
                </TableView>
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <!-- 오른쪽: 폐기 상세 정보 -->
            <VBox prefHeight="638.0" prefWidth="467.0" spacing="10.0" style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-padding: 10;" HBox.hgrow="NEVER">
                <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="폐기 상세 정보" />
                <GridPane alignment="CENTER" hgap="10.0" maxWidth="-Infinity" prefHeight="215.0" prefWidth="493.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="상품 코드">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="productCodeField" editable="false" maxWidth="-Infinity" prefHeight="35.0" prefWidth="270.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        <Label text="상품명" GridPane.rowIndex="1">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="productNameField" editable="false" maxWidth="-Infinity" prefHeight="35.0" prefWidth="270.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="유통기한" GridPane.rowIndex="2">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="expirationDateField" editable="false" maxWidth="-Infinity" prefHeight="35.0" prefWidth="270.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label text="개수" GridPane.rowIndex="3">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="quantityField" editable="false" maxWidth="-Infinity" prefHeight="35.0" prefWidth="270.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <Label text="폐기 사유" GridPane.rowIndex="4">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="discardReasonField" editable="false" maxWidth="-Infinity" prefHeight="35.0" prefWidth="270.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                        <Label text="금액" GridPane.rowIndex="5">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="amountField" editable="false" maxWidth="-Infinity" prefHeight="35.0" prefWidth="270.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                    </children>
                </GridPane>
                <HBox alignment="CENTER_RIGHT" prefHeight="46.0" prefWidth="400.0" spacing="10.0">
                    <Button contentDisplay="CENTER" onAction="#viewDaily" prefHeight="32.0" prefWidth="70.0" text="일별 보기" />
                    <Button contentDisplay="CENTER" onAction="#viewMonthly" prefHeight="32.0" prefWidth="70.0" text="월별 보기" />
                    <padding>
                        <Insets right="45.0" />
                    </padding>
                </HBox>
            </VBox>
        </children>
    </HBox>
</AnchorPane>
